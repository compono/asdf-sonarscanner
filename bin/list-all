#!/usr/bin/env bash

set -e
# set -x

get_platform() {
  [ "Linux" = "$(uname)" ] && echo "linux64" || echo "osx-amd64"
}

releases_path=https://api.github.com/repos/SonarSource/sonar-scanner-cli/tags
cmd="curl -sL"
if [ -n "$OAUTH_TOKEN" ]; then
  cmd="$cmd -H 'Authorization: token $OAUTH_TOKEN'"
fi
cmd="$cmd $releases_path"

# need jq; download portable version if not installed
if [ -z "$(command -v jq)" ]; then
  curl -L -s "https://github.com/stedolan/jq/releases/download/jq-1.6/jq-$(get_platform)" -o jq
  chmod +x jq
fi

# fetch all tag names
versions=$(eval $cmd | jq -r '.[].name' | sort --version-sort)
echo $versions
